<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:HRM.WPF.ViewModel"
                    xmlns:view="clr-namespace:HRM.WPF.View">
    <DataTemplate DataType="{x:Type vm:HomeVM}">
        <view:Home/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:DepartmentVM}">
        <view:Department/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:EmployeeVM}">
        <view:Employee/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:PositionVM}">
        <view:Position/>
    </DataTemplate>
    
</ResourceDictionary>